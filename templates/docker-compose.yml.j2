version: '3.7'
{% if static_docker_ip|string|length > 0 %}
{% set ip_part = '.'.join(static_docker_ip.split('.')[:3]) %}
{% endif %}

services:
{% if memcache %}
  memcached:
    image: memcached
    restart: 'always'
    container_name: '{{ compose_project_name }}-memcached'
{% if static_docker_ip|string|length > 0 %}
    networks:
      - {{ compose_project_name }}-network
{% endif %}
{% endif %}

  webserver:
    build:
      context: ./bin/php/
    container_name: '{{ compose_project_name }}-{{ phpversion }}'
    restart: 'always'
    working_dir: /var/www/{{ drupal_web_root }}
    sysctls:
      - net.ipv4.ip_unprivileged_port_start=0
    depends_on:
      database:
        condition: service_healthy
{% if expose_http_port|string|length > 0 %}
    ports:
      - "{{ expose_http_port }}:80"
{% if ssl_enabled and expose_https_port|string|length > 0 %}
      - "{{ expose_https_port }}:443"
{% endif %}
{% endif %}
    links:
      - database
{% if memcache %}
      - memcached
{% endif %}
{% if solr %}
      - solr
{% endif %}
    volumes:
      - {{ drupal_root_dir }}:/var/www/{{ ":cached" if docker_cached_volume }}
      - {{ drupal_files_dir }}:/var/www/{{ drupal_web_root }}/sites/default/files/{{ ":cached" if docker_cached_volume }}
      - ${VHOSTS_DIR-./apache}:/etc/apache2/sites-enabled{{ ":cached" if docker_cached_volume }}
{% if ssl_enabled %}
      - {{ ssl_cert_path }}:/etc/apache2/cert.pem{{ ":cached" if docker_cached_volume }}
      - {{ ssl_key_path }}:/etc/apache2/pivate.key{{ ":cached" if docker_cached_volume }}
{% endif %}
      - ${LOG_DIR-./logs/apache2}:/var/log/apache2{{ ":cached" if docker_cached_volume }}
    environment:
      XDEBUG_CONFIG: "{{ xdebug_enviroment }}"
{% if static_docker_ip|string|length > 0 %}
    networks:
      {{ compose_project_name }}-network:
        ipv4_address: {{ ip_part }}.10
{% endif %}

  database:
    build:
      context: "./bin/database"
    container_name: '{{ compose_project_name }}-database'
{% if database == "mysql" %}
    command: --max_allowed_packet=1048576000 --skip-grant-tables
    healthcheck:
      test: ["CMD-SHELL", 'mysql --database=mysql --password={{ mysql_root_password }} --execute="SELECT count(table_name) > 0 FROM information_schema.tables;" --skip-column-names -B']
      interval: 3s
      timeout: 30s
      retries: 10
{% endif %}
    restart: 'always'
    volumes:
      - ${MYSQL_DATA_DIR-./data/mysql}:/var/lib/mysql{{ ":cached" if docker_cached_volume }}
      - ${MYSQL_LOG_DIR-./logs/mysql}:/var/log/mysql{{ ":cached" if docker_cached_volume }}
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_root_password }}
      MYSQL_DATABASE: {{ mysql_database }}
      MYSQL_USER: {{ mysql_user }}
      MYSQL_PASSWORD: {{ mysql_password }}
{% if static_docker_ip|string|length > 0 %}
    networks:
      {{ compose_project_name }}-network:
        ipv4_address: {{ ip_part }}.13
{% endif %}

{% if solr %}
  solr:
    container_name: '{{ compose_project_name }}-solr'
    restart: 'always'
    build:
      context: "./bin/solr"
    volumes:
{% if solr_version != 4%}
      - ./data/solr:/opt/solr/server/solr/{{ solr_core_name }}{{ ":cached" if docker_cached_volume }}
{% else %}
      - ./data/solr:/opt/solr/example/solr/{{ solr_core_name }}{{ ":cached" if docker_cached_volume }}
{% endif %}
{% if static_docker_ip|string|length > 0 %}
    networks:
      {{ compose_project_name }}-network:
        ipv4_address: {{ ip_part }}.12
{% endif %}
{% endif %}

{% if install_adminer %}
  adminer:
    image: adminer
    container_name: '{{ compose_project_name }}-adminer'
    restart: always
{% if static_docker_ip|string|length > 0 %}
    networks:
      {{ compose_project_name }}-network:
        ipv4_address: {{ ip_part }}.11
{% endif %}
{% if not static_docker_ip|string|length > 0 %}
    ports:
      - "{{ adminer_port }}:8080"
{% endif %}
    links:
      - database
{% endif %}

{% if static_docker_ip|string|length > 0 %}
networks:
  {{ compose_project_name }}-network:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: {{ ip_part }}.0/28
{% endif %}
